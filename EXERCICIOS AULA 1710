#include <stdio.h>

int main()
{
    int codUsuario, senha;
    const int USUARIO = 1234, SENHA = 9999;
    
    printf("Digite o código do usuário: \n");
    scanf("%d", &codUsuario);
    

    if (codUsuario == USUARIO) {
        printf("Digite a senha: \n");
        scanf("%d", &senha);
            if (senha == SENHA) {
                printf("Usuário logado");
            } else {
                printf("Senha incorreta!");
            }
    } else {
        printf("Usuário incorreto!");
    }



    
    return 0;
}


