#include <stdio.h>

int main()
{
    float ladoA;
    float ladoB; 
    float ladoC;
    
    printf("Lado 1: \n");
    scanf("%f", &ladoA);
    printf("Lado 2: \n");
    scanf("%f", &ladoB);
    printf("Lado 3: \n");
    scanf("%f", &ladoC);
    
    if (ladoA < (ladoB+ladoC) && ladoB < (ladoA+ladoC) && ladoC < (ladoA+ladoB)) {
        printf("É um triângulo");
        
    } else {
        printf("Não é triângulo");
        
    }
    


    
    return 0;
}

