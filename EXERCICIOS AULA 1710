import java.util.Scanner;

public class Main
{
	public static void main(String[] args) {

		int valor1;
		int valor2;
		int soma1;
		int soma2;
		int subtracao;

		Scanner input = new Scanner(System.in);

		System.out.println("Digite o 1 valor: ");
		valor1 = input.nextInt();
		System.out.println("Digite o 2 valor: ");
		valor2 = input.nextInt();

        soma1 = valor1 + valor2;
        
        if (soma1 > 20) {
            soma2 = soma1 + 8;
            System.out.println("A soma é maior que 20.");
            System.out.println("O valor final é: " + soma2);
        } else {
            subtracao = soma1 - 5;
            System.out.println("A soma é menor ou igual a 20. ");
            System.out.println("o valor final é: "+ subtracao);

        }
	}
}

